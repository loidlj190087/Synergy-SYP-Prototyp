<Window x:Class="CarPoolManager.CarDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarPoolManager"
        mc:Ignorable="d"
        Title="CarDetails" Height="450" Width="800"
        Loaded="Window_Loaded">

    <Grid Margin="0,10,0,0">
        <StackPanel>
            <Label Content="AutoDetails:" FontSize="15" Margin="10, 10, 0,0" FontFamily="Arial Rounded MT Bold"/>
            <DataGrid x:Name="grdCarDetails" Width="800" Height="70" Margin="0, 10, 0,0"/>
            <Label Content="Bookings:" FontSize="15" Margin="10, 10, 0,0" FontFamily="Arial Rounded MT Bold"/>
            <ListBox x:Name="lstBookings" Height="313" Margin="0, 10, 0,0" />
        </StackPanel>
    </Grid>
</Window>
