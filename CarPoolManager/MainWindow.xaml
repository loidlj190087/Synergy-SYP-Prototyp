<Window x:Class="CarPoolManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CarPoolManager" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>

        <StackPanel Margin="0">
            <DockPanel Background="#383e42" Height="45" Name="Header">
                <Label  Content="E V G" Foreground="#e8b809" FontWeight="Bold" FontFamily="Bahnschrift SemiBold" FontSize="24" 
                        Height="40" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="20, 0, 0, 0"/>
                <Label  Content="Car Pool Manager" Foreground="#e8b809" FontWeight="Bold" FontFamily="Bahnschrift SemiBold" FontSize="24" 
                        Height="40" HorizontalAlignment="Right" Margin="0, 0, 20, 0"/>
            </DockPanel>
            <DockPanel>
                <ComboBox Name="cboMakes" Width="140" Margin="10" HorizontalAlignment="Left" SelectionChanged="cboMakes_SelectionChanged"/>
                <ComboBox Name="cboModels" Width="140" Margin="10" HorizontalAlignment="Left" SelectionChanged="cboModels_SelectionChanged"/>
                <TextBox Name="txtNumberPlate" Width="140" Height="25" Margin="10, 0, 10, 0" HorizontalAlignment="Left" KeyUp="txtNumberPlate_KeyUp"/>
                <Slider Name="sldMaxMilage" HorizontalAlignment="Left" Width="140" Height="25" Margin="10, 0, 0, 0" Minimum="0" Maximum="100000" Value="100000" 
                        ValueChanged="sldMaxMilage_ValueChanged"/>
                <Slider Name="sldNextService" HorizontalAlignment="Left" Width="140" Height="25" Margin="10, 0, 0, 0" Value="100"/>
            </DockPanel>
            <DockPanel>
                <Button Name="btnAddReservation" Content="Reservieren"  Width="140" Height="25" Margin="10, 0, 0, 0" HorizontalAlignment="Left" IsEnabled="False" 
                        Click="btnAddReservation_Click"/>
                <Button Name="btnAddNewCar" Content="Neues Auto anlegen" Width="140" Height="25" Margin="20, 0, 0, 0"
                        Click="btnAddNewCarOnclick"/>
                <Label Content="Maximaler Kilometerstand" HorizontalAlignment="Right" Margin="180, 0, 00, 0"/>
                <Label Content="Nächster Service" HorizontalAlignment="Right" Margin="0, 0, 50, 0"/>
            </DockPanel>
            <Separator Height="5"/>
            <Grid>
                <ListBox Name="lstCars" Height="300" MouseDoubleClick="lstCars_DoubleClick" SelectionChanged="lstCars_SelectionChanged" Margin="0,15,0,-15"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
